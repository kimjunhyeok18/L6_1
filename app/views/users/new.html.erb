
<%= form_tag '/users/create', method: :post do %>
    <%= label_tag :uid, 'ユーザーID' %>
    <%= text_field_tag :uid %>
    <%= label_tag :password, 'パスワード' %>
    <%= password_field_tag :password %>
    <%= label_tag :password_confirmation, 'パスワード確認' %>
    <%= password_field_tag :password_confirmation %>
    <%= submit_tag 'sign up' %>
<% end %>